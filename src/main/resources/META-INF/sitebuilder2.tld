<taglib xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
	version="2.1">

	<description>The tag library for the Apache Sling Sitebuilder
	</description>
	<tlib-version>1.0-SNAPSHOT</tlib-version>
	<short-name>sitebuilder</short-name>
	<uri>http://sling.apache.org/taglibs/sitebuilder2</uri>
	<tag>
		<name>component</name>
		<description>
			Wraps component content and provides useful variables.
		</description>
		<tag-class>
			org.apache.sling.sitebuilder.tld.ComponentTag2
		</tag-class>
		<body-content>JSP</body-content>
		<attribute>
			<description>
				The child resource of the page resource which is the base resource for the component.
			</description>
			<name>componentId</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>
				The resource type of the component to include.
			</description>
			<name>resourceType</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
</taglib>

